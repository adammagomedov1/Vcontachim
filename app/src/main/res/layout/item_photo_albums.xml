<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout_photoAlbums"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:background="?selectableItemBackground"
    android:orientation="vertical">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/image_view_photo_albums"
        android:layout_width="156dp"
        android:layout_height="156dp"
        android:scaleType="centerCrop"
        app:shapeAppearanceOverlay="@style/RoundedImageViewRounding_12dp"
        tools:src="@tools:sample/avatars" />

    <TextView
        android:id="@+id/text_view_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:textColor="@color/black"
        android:textSize="16sp"
        tools:text="Лето 2022" />

    <TextView
        android:id="@+id/text_view_number_of_photos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:textColor="#818C99"
        android:textSize="13sp"
        tools:text="4 фотографии" />

</LinearLayout>